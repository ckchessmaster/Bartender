@model IEnumerable<ckingdon.Bartender.Models.Drink>
@{
    ViewBag.Title = "Drinks";
}

@{var drinks = Model.ToArray();}

@{ int count = 0;}
<table class="drinks">
    @for(int i=0; i<3; i++)
    {
        <tr>
            @for (int x = 0; x < 3; x++)
            {
                <td>
                    <img src="@drinks[count].Image" alt="@drinks[count].Name" />
                    <p>@drinks[count].Name</p>
                    <p><div class="btn btn-default">@Html.ActionLink("Select", "Order", new { id = drinks[count].DrinkID })</div></p>
                    @{count++;}
                </td>
            }@*end column loop*@
        </tr>
    }@*end row loop*@
</table>
